        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--<include-->
            <!--layout="@layout/movie_trailer_list"-->
            <!--&gt;</include>-->

    <!--</androidx.recyclerview.widget.RecyclerView>-->

</FrameLayout>